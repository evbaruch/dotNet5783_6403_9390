<Window x:Class="PL.UserMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Icon="/Icon.png"
        Title="UserMainWindow" Height="650" Width="800" x:Name="MyWindow"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid
        Name="MainGrid">

        <Grid.Background>
            <ImageBrush ImageSource="{Binding CurrentBackgroundImage, ElementName=MyWindow ,UpdateSourceTrigger=PropertyChanged}"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="350*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid 
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label 
            Grid.Column="0"
            Content="Wellcome "  
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"
            HorizontalAlignment="Right"
            Width="auto"
            Height="80"
            FontSize="40"
            
            FontStyle ="Italic" 
            Foreground="DeepSkyBlue"
            FontFamily="Monotype Corsiva"/>

            <Label 
            Grid.Column="1"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            HorizontalAlignment="Left"
            Content="{Binding UserName}"  
            Width="auto"
            Height="80"
            FontSize="40"
            FontStyle ="Italic" 
            Foreground="DeepSkyBlue"
            FontFamily="Monotype Corsiva"/>

        </Grid>

        <Button 
           Content="Back" 
           Grid.Column="0" 
           x:Name="Back"
           HorizontalAlignment="Left" 
           Margin="5,5,5,5"
           Padding="5"
           Width="104"
           Click="Back_Click"
            >
            <Button.Resources>
                <Style 
                        TargetType="Border">
                    <Setter 
                            Property="CornerRadius"
                            Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <Grid 
            Name="midupLSide"
            Height="auto"
            Grid.Row="2"
            Width="auto">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions >

            <Button 
            Content="New Order" 
            Grid.Column="2" 
            Width="105"
            HorizontalAlignment="Stretch"
            Click="NewOrderWindow_Click"
            FontWeight="Bold"
            >
                <Button.Resources>
                    <Style 
                    TargetType="Border">
                        <Setter 
                        Property="CornerRadius"
                        Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button  
            Content="My Profile"
            Grid.Column="1"
            Width="100" 
            Height="30"
            HorizontalAlignment="Stretch"
            Click="ProfileWindow_Click"
            FontWeight="Bold"
            >
                <Button.Resources>
                    <Style 
                    TargetType="Border">
                        <Setter 
                        Property="CornerRadius"
                        Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

        </Grid>

    </Grid>
</Window>
