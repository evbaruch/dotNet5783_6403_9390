<Window x:Class="PL.AdminWindows.ProductListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.AdminWindows"
        mc:Ignorable="d"
        Title="ProductListWindow" Height="640" Width="800" x:Name="MyWindow">
    <Grid Name="MainGrid">

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="220*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <Grid 
            Name="UpGrid"
            Height="auto"
            Grid.Row="0"
            Width="auto">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="600*"/>
                <ColumnDefinition Width="200*"/>
            </Grid.ColumnDefinitions >

            <ComboBox 
                Name="CategoriesSelector"
                ItemsSource="{Binding Categories , ElementName=MyWindow}"
                HorizontalAlignment= "Stretch"
                VerticalAlignment="Stretch"
                Grid.Column="1" 
                Margin="110,0,0,0"
                FontSize="20"
                SelectionChanged="CategoriesSelector_SelectionChanged"
            />

            <Button 
                Content="Back" 
                Grid.Column="0" 
                x:Name="Back"
                HorizontalAlignment="Left" 
                Margin="5,5,5,5"
                Padding="5"
                Width="104"
                Click="Back_Click"
            >
                <Button.Resources>
                    <Style 
                        TargetType="Border">
                        <Setter 
                            Property="CornerRadius"
                            Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Label
                Content="Category:"
                Margin="0,0,365,0"
                Grid.Column="1"
                FontSize="20" 
                Foreground="Black"/>

        </Grid>

        <Grid 
            Name="midGrid"
            Height="auto"
            Grid.Row="1"
            Width="auto">

            <Grid
                Name="midSide"
                Height="auto"
                Grid.Column="3"
                Width="auto">

                <Grid.RowDefinitions>
                    <RowDefinition Height="200*"/>
                    <RowDefinition Height="200*"/>
                    <RowDefinition Height="200*"/>
                </Grid.RowDefinitions >

                <Grid
                    Name="midupRSide"
                    Height="auto"
                    Grid.Row="0"
                    Width="auto">
                    <Grid.Background>
                        <ImageBrush ImageSource="..\..\background\products\brain.jpeg"/>
                    </Grid.Background>
                </Grid>

                <Grid
                    Name="midMidRSide"
                    Height="auto"
                    Grid.Row="1"
                    Width="auto">
                    <Grid.Background>
                        <ImageBrush ImageSource="..\..\background\products\product (10).jpeg"/>
                    </Grid.Background>
                </Grid>

                <Grid
                    Name="midDownRSide"
                    Height="auto"
                    Grid.Row="2"
                    Width="auto">
                    <Grid.Background>
                        <ImageBrush ImageSource="..\..\background\products\product (12).jpeg"/>
                    </Grid.Background>
                </Grid>

            </Grid>


            <Grid
                Name="midlSide"
                Height="auto"
                Grid.Column="0"
                Width="auto">

                <Grid.RowDefinitions>
                    <RowDefinition Height="200*"/>
                    <RowDefinition Height="200*"/>
                    <RowDefinition Height="200*"/>
                </Grid.RowDefinitions >

                <Grid
                    Name="midupLSide"
                    Height="auto"
                    Grid.Row="0"
                    Width="auto">
                    <Grid.Background>
                        <ImageBrush ImageSource="..\..\background\products\product (6).jpeg"/>
                    </Grid.Background>
                </Grid>

                <Grid
                    Name="midMidLSide"
                    Height="auto"
                    Grid.Row="1"
                    Width="auto">
                    <Grid.Background>
                        <ImageBrush ImageSource="..\..\background\products\product (2).jpeg"/>
                    </Grid.Background>
                </Grid>

                <Grid
                    Name="midDownLSide"
                    Height="auto"
                    Grid.Row="2"
                    Width="auto">
                    <Grid.Background>
                        <ImageBrush ImageSource="..\..\background\products\product (9).jpeg"/>
                    </Grid.Background>
                </Grid>

            </Grid>

            <ListView 
                Grid.Column="1"
                ItemsSource = "{Binding Path = ProductForObservableCollection, ElementName = MyWindow}"
                x:Name="ProductListview" 
                MouseDoubleClick = "updateProduct_Click" 
                SelectionChanged ="ProductListview_SelectionChanged"
                FontSize="15"
                Background="White"
                Foreground="Black"
                >

                <ListView.View>

                    <GridView>

                        <GridViewColumn 
                            DisplayMemberBinding="{Binding Path= ID}"
                            Width="auto">
                            <GridViewColumnHeader
                                Tag="ID"
                                Click="GridViewColumnHeaderSort_Click"
                                Content="ID"/>
                        </GridViewColumn>

                        <GridViewColumn 
                            DisplayMemberBinding="{Binding Path= Name}" 
                            Width="auto">
                            <GridViewColumnHeader
                                Tag="Name"
                                Click="GridViewColumnHeaderSort_Click"
                                Content="Name"/>
                        </GridViewColumn>

                        <GridViewColumn 
                            DisplayMemberBinding="{Binding Path= Category}"  
                            Width="auto">
                            <GridViewColumnHeader
                                Tag="Category"
                                Click="GridViewColumnHeaderSort_Click"
                                Content="Category"/>
                        </GridViewColumn>

                        <GridViewColumn 
                            DisplayMemberBinding="{Binding Path= Price}"
                            Width="auto">
                            <GridViewColumnHeader
                                Tag="Price"
                                Click="GridViewColumnHeaderSort_Click"
                                Content="Price"/>
                        </GridViewColumn>

                    </GridView>

                </ListView.View>
            </ListView>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="600*"/>
                <ColumnDefinition Width="200*"/>
            </Grid.ColumnDefinitions >

        </Grid>

        <Button 
            Content="Add new Product" 
            Grid.Row="3" 
            x:Name="addProduct"
            HorizontalAlignment="Right" 
            Margin="5,5,5,5"
            Padding="5"
            Width="104"
            Click ="addProduct_Click"
            >
            <Button.Resources>
                <Style 
                    TargetType="Border">
                    <Setter 
                        Property="CornerRadius" 
                        Value="5"/>
                </Style>
            </Button.Resources>
        </Button>



    </Grid>
</Window>
