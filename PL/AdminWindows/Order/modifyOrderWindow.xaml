<Window xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"  
        x:Class="PL.AdminWindows.Order.modifyOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.AdminWindows.Order"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        Title="modifyOrderWindow" Height="440" Width="500">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid 
            Name="UpGrid"
            Height="auto"
            Grid.Row="0"
            Width="auto">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="600*"/>
                <ColumnDefinition Width="400*"/>
            </Grid.ColumnDefinitions >

            <Grid 
            Name="leftupGrid"
            Height="auto"
            Grid.Column="0"
            Width="auto">

                <Button 
                Content="Back" 
                Grid.Column="0" 
                x:Name="Back"
                HorizontalAlignment="Left" 
                Margin="5,5,5,75"
                Padding="5"
                Width="auto"
                Height="auto"
                Click="Back_Click">
                    <Button.Resources>
                        <Style 
                        TargetType="Border">
                            <Setter 
                            Property="CornerRadius"
                            Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
            </Grid>

            <Grid
                Name="midupGrid"
                Height="auto"
                Grid.Column="1"
                Width="auto">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid
                    Name="mid0upGrid"
                    Height="auto"
                    Grid.Row = "0"
                    Width="auto" >

                    <TextBlock 
                        Grid.Column="1"
                        Margin="5,5,170,5"
                        x:Name="IDTextBlock"
                        Text="Customer ID:"
                        FontSize="10"
                        VerticalAlignment="Center" TextAlignment="Right"
                        />

                    <TextBox 
                        Grid.Column="1"
                        Grid.Row="0"
                        x:Name="IDTextBox"
                        Width="auto"
                        FontSize="10"
                        Margin="95,0,40,0"
                        VerticalAlignment="Center"
                    >
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>
                
                <Grid
                    Name="mid1upGrid"
                    Height="auto"
                    Grid.Row = "1"
                    Width="auto" >


                    <TextBlock 
                        Grid.Column="1"
                        Margin="5,5,170,5"
                        x:Name="NameTextBlock"
                        Text="Customer Name:"
                        FontSize="10"
                        VerticalAlignment="Center" TextAlignment="Right"
                        />

                    <TextBox 
                        Grid.Column="1"
                        Grid.Row="0"
                        x:Name="NameTextBox"
                        Width="auto"
                        FontSize="10"
                        Margin="95,0,40,0"
                        VerticalAlignment="Center"
                    >
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>

                <Grid
                    Name="mid2upGrid"
                    Height="auto"
                    Grid.Row = "2"
                    Width="auto" >

                    <TextBlock 
                        Grid.Column="1"
                        Margin="5,5,170,5"
                        x:Name="EmailTextBlock"
                        Text="Customer Email:"
                        FontSize="10"
                        VerticalAlignment="Center" TextAlignment="Right"
                        />
                    
                    <TextBox 
                        Grid.Column="1"
                        Grid.Row="0"
                        x:Name="EmailTextBox"
                        Width="auto"
                        FontSize="10"
                        Margin="95,0,40,0"
                        VerticalAlignment="Center"
                    >
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>

                <Grid
                    Name="mid3upGrid"
                    Height="auto"
                    Grid.Row = "3"
                    Width="auto" >

                    <TextBlock 
                        Grid.Column="1"
                        Width="auto"
                        Height="auto"
                        Margin="5,5,170,5"
                        x:Name="AddressTextBlock"
                        Text="Customer Address:"
                        FontSize="10"
                        VerticalAlignment="Center" TextAlignment="Right"
                        />

                    <TextBox 
                        Grid.Column="1"
                        Grid.Row="0"
                        x:Name="AddressTextBox"
                        Width="auto"
                        FontSize="10"
                        Margin="95,0,40,0"
                        VerticalAlignment="Center"
                    >
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>

            </Grid>

            <Grid
                Name="midRightGrid"
                Height="auto"
                Grid.Column="2"
                Width="auto">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid
                    Name="right0upGrid"
                    Height="auto"
                    Grid.Row = "0"
                    Width="auto" >

                <TextBlock 
                        Grid.Column="1"
                        Margin="5,5,204,5"
                        x:Name="StatusTextBlock"
                        Text="Customer ID:"
                        FontSize="10"
                        VerticalAlignment="Center" 
                        TextAlignment="Right"
                        />

                <TextBox 
                        Grid.Column="1"
                        Grid.Row="0"
                        x:Name="StatusTextBox"
                        Width="auto"
                        FontSize="10"
                        Margin="90,0,100,0"
                        VerticalAlignment="Center"
                    >
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </Grid>

            <Grid
                    Name="right1upGrid"
                    Height="auto"
                    Grid.Row = "1"
                    Width="auto" >


                <TextBlock 
                        Grid.Column="1"
                        Margin="5,5,204,5"
                        x:Name="OrderDateTextBlock"
                        Text="Customer Name:"
                        FontSize="10"
                        VerticalAlignment="Center" TextAlignment="Right"
                        />

                <TextBox 
                        Grid.Column="1"
                        Grid.Row="0"
                        x:Name="OrderDateTextBox"
                        Width="auto"
                        FontSize="10"
                        Margin="90,0,100,0"
                        VerticalAlignment="Center"
                    >
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </Grid>

            <Grid
                    Name="right2upGrid"
                    Height="auto"
                    Grid.Row = "2"
                    Width="auto" >

                <TextBlock 
                        Grid.Column="1"
                        Margin="5,5,204,5"
                        x:Name="ShipDateTextBlock"
                        Text="Customer Email:"
                        FontSize="10"
                        VerticalAlignment="Center" TextAlignment="Right"
                        />
                    

                <TextBox 
                        Grid.Column="1"
                        Grid.Row="0"
                        x:Name="ShipDateTextBox"
                        Width="auto"
                        FontSize="10"
                        Margin="90,0,100,0"
                        VerticalAlignment="Center"
                    >
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </Grid>

            <Grid
                    Name="right3upGrid"
                    Height="auto"
                    Grid.Row = "3"
                    Width="auto" >

                <TextBlock 
                    Grid.Column="1"
                    Width="auto"
                    Height="auto"
                    Margin="5,5,204,5"
                    x:Name="DeliveryrDateTextBlock"
                    Text="Deliveryr Date:"
                    FontSize="10"
                    VerticalAlignment="Center" TextAlignment="Right"
                    />


                    
                <DatePicker
                    Grid.Column="1"
                    Grid.Row="0"
                    x:Name="DeliveryrDateDatePicker"
                    Width="auto"
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    
                    >
                        
                            <DatePicker.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </DatePicker.Resources>
                </DatePicker>
            </Grid>

        </Grid>
    </Grid>
        
    </Grid>
</Window>
