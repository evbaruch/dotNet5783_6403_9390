<UserControl x:Class="PL.InputPopUP"
          x:Name="inputPopup"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
          mc:Ignorable="d"
          Width="300" Height="190">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="User name:" Target="{Binding ElementName=inputTextBox1}" VerticalAlignment="Center" HorizontalAlignment="Center" />
            <TextBox Name="inputTextBox1" Width="200" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Order ID:" Target="{Binding ElementName=inputTextBox2}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBox Name="inputTextBox2" Width="200" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
        <Button Content="Search" Margin="10" HorizontalAlignment="Center" Click="Button_Click" />
    </StackPanel>
</UserControl>
